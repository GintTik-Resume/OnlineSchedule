@model OnlineSchedule.Presentation.ViewModels.LoginViewModel

<form action="Login" method="post" class="form">
    <h1 class="title">Вхід</h1>

    <div class="input-group">
        <input asp-for="Email" type="text" class="input" placeholder="почта">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="input-group">
        <input asp-for="Password" type="text" class="input" placeholder="пароль">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="input-row">
        <input asp-for="RememberMe" type="checkbox" class="checkbox">
        <label asp-for="RememberMe" class="label">запам'ятати мене</label>
    </div>

    <button class="btn btn-primary">увійти</button>

    <div asp-validation-summary="ModelOnly" class="form__errors"></div>
</form>